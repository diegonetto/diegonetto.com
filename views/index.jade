extends layout

append head
  link(rel='stylesheet', href='/stylesheets/home.css')

block content
  .row-fluid
    .span12
      .row-fluid
        .hero-wrapper.span8
          .hero-unit.blue.light-text
            h1 Who I Am
            h3 A recent <span class="stress">Virginia Tech</span> graduate with a major in <span class="stress">Computer Science</span> and a minor in <span class="stress">Math</span>, I wear the many hats of a <span class="stress">Full Stack Engineer</span>, <span class="stress">Entrepreneur</span>, and a <span class="stress">Web / Mobile Hacker</span> with a healthy addiciton to Node and Backbone JS.
          .hero-unit.green.light-text
            h1 Recent Work
            ul
              li DebtCrun.ch
              li Tonight-Life.com
              li NewSpaceGlobal.com
          .hero-unit.pink.light-text
            h1 Tech I Love
            ul.thumbnails
              li.span3
                #nodejs.thumbnail
                  a(href='http://nodejs.org/', target='_blank')
