              li.span3
                #backbonejs.thumbnail
                  a(href='http://backbonejs.org/', target='_blank')
                    img(src='/images/backbone.png')
              li.span3
                #underscorejs.thumbnail
                  a(href='http://underscorejs.org/', target='_blank')
                    img(src='/images/underscore.png')
