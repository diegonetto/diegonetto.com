              li.span3
                #nodejs.thumbnail
                  a(href='http://nodejs.org/', target='_blank')
                    img(src='/images/nodejs.png').img-rounded
              li.span3
                #backbonejs.thumbnail
                  a(href='http://backbonejs.org/', target='_blank')
                    img(src='/images/backbone.png').img-rounded
